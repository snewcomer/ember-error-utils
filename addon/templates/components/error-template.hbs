{{#if hasBlock}}
  {{yield}}
{{else}}
  <div class="error-wrapper-content {{errorClass}}" data-test-id="error-wrapper">
    {{#if is404}}
      <h1 data-test-id="error-title">404 Error</h1>
      <p  data-test-id="error-message">We can't find the page you're looking for.</p>
    {{else}}
      <h1 data-test-id="error-title">Server Error</h1>
      <p data-test-id="error-message">Something went wrong. Try again and if the problem persists, please report your problem and mention what caused it.</p>
    {{/if}}
    <ul>
      <li data-test-error-link-home>{{link-to "Home" "index"}}</li>
      <li data-test-error-link-refresh><a href="/">Refresh</a></li>
    </ul>
  </div>
{{/if}}